.listen-msg
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  flex-direction column

  &__message
    text-align center
    margin-bottom 40px

    &__label
      margin-bottom 25px
      font-size 1.1em

    &__text
      background #efefef
      padding 12px 30px
      border-radius 8px